dkms_modules="yoga-usage-mode ${version}"
depends="dkms"

do_install() {
	vmkdir usr/src/${pkgname}-${version}
	vcopy Makefile usr/src/${pkgname}-${version}
	vcopy ${FILESDIR}/dkms.conf usr/src/${pkgname}-${version}
	vcopy "*.c" usr/src/${pkgname}-${version}
}
